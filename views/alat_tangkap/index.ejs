<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Alat Tangkap</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container py-5">
      <% if (messages.success) { %>
      <div class="alert alert-info" role="alert"><%- messages.success %></div>
      <% } %>
      <div class="row">
        <div class="col">
          <div class="col-10 mx-auto">
            <a
              href="/tongkang/alat_tangkap/create"
              class="btn btn-sm btn-success"
              >Tambah</a
            >
            <table class="table col-lg-10">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Nama</th>
                  <th colspan="2" scope="col">Aksi</th>
                </tr>
              </thead>
              <tbody>
                <% for(var i = 0; i < data.length; i++){ %>
                <tr>
                  <th scope="row"><%= (i+1) %></th>
                  <td><%= data[i].nama_alat_tangkap %></td>
                  <td>
                    <a
                      href="/tongkang/alat_tangkap/edit/<%= data[i].id_alat_tangkap %>"
                      class="btn btn-sm btn-warning"
                      >Edit</a
                    >
                    <a
                      href="/tongkang/alat_tangkap/delete/<%= data[i].id_alat_tangkap %>"
                      class="btn btn-sm btn-danger"
                      >Delete</a
                    >
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
